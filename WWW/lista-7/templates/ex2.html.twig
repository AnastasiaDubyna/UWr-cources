<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('styles/ex2.css') }}" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <table>
            <tr>
                <th>Position</th>
                <th>Score</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Town</th>
                <th>Team</th>
            </tr>
            {% for row in table %}
                {% if row.score == 0 %}
                    <tr class="zero-score">
                        <td>{{ row.position }}</td>
                        <td>{{ row.score }}</td>
                        <td>{{ row.name }}</td>
                        <td>{{ row.surname }}</td>
                        <td>{{ row.town }}</td>
                        <td>{{ row.team }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td>{{ row.position }}</td>
                        <td>{{ row.score }}</td>
                        <td>{{ row.name }}</td>
                        <td>{{ row.surname }}</td>
                        <td>{{ row.town }}</td>
                        <td>{{ row.team }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
    </body>
</html>